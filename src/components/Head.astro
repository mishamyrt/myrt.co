---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="theme-color" content="#0c0c0c">
  <link rel="icon" type="image/png" href="/assets/avatar@2x.png">
  <script>
    function listenTheme() {
      const themeNode = document.querySelector('meta[name="theme-color"]')
      window
        .matchMedia('(prefers-color-scheme: dark)')
        .addEventListener('change', function (e) {
          const isDark = e.matches
          themeNode.setAttribute('content', isDark
            ? '#0c0c0c'
            : '#ffffff'
          )
        })
    }
    document.addEventListener('DOMContentLoaded', listenTheme)
  </script>
</head>

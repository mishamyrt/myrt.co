{
  "name": "myrt.co",
  "version": "1.0.0",
  "main": "build.js",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "build": "export NODE_ENV=production && node build.js",
    "serve": "npx parcel serve src/index.pug",
    "size-check": "npx size-limit",
    "spell-check": "npx yaspeller dist/**/*.html",
    "lint": "npx stylelint \"src/**/*.css\" && npx pug-lint src/",
    "lint:fix": "npx stylelint \"src/**/*.css\" --fix",
    "postinstall": "chmod +x .hooks/* && cp -r .hooks/ .git/hooks/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/mishamyrt/mishamyrt.gitlab.io.git"
  },
  "author": "mishamyrt",
  "license": "WTFPL",
  "bugs": {
    "url": "https://gitlab.com/mishamyrt/mishamyrt.gitlab.io/issues"
  },
  "homepage": "https://myrt.co",
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  },
  "pugLintConfig": {
    "extends": "clock"
  },
  "yaspeller": {
    "ignoreCapitalization": true,
    "dictionary": [

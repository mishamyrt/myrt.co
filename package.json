{
  "name": "myrt.co",
  "private": true,
  "version": "3.0.0",
  "scripts": {
    "start": "npx astro dev",
    "build": "npx astro build",
    "build:docker": "docker build -t myrt-co:latest .",
    "prebuild:docker": "npm run build",
    "start:docker": "docker run --name myrt-app -d -p 80:80 -p 443:443 myrt-co:latest",

      "vue",
      "webpack",
      "XP",
      "янв",
      "фев",
      "мар",
      "апр",
      "май",
      "июн",
      "июл",
      "авг",
      "сен",
      "окт",
      "ноя",
      "дек"
    ]
  },
  "dependencies": {
    "@size-limit/preset-app": "^2.1.4",
    "cheerio": "^1.0.0-rc.3",
    "parcel-bundler": "^1.12.3",
    "pug": "^2.0.4",
    "rimraf": "^3.0.0",
    "size-limit": "^2.1.4",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "typograf": "^6.8.2",
    "yaspeller": "^6.0.0"
  },
  "size-limit": [
    {
      "name": "Critical",
      "path": "dist/ru/index.html",
      "limit": "4 KB"
    },
    {
      "name": "Full",
      "path": [
        "dist/*.webp",
        "dist/*.png",
        "dist/*.woff2"
      ],
      "limit": "120 KB"
    }
  ],
  "devDependencies": {
    "pug-lint": "^2.6.0",
    "pug-lint-config-clock": "^2.0.0"
  }
}

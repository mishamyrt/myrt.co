{
  "name": "myrt.co",
  "private": true,
  "version": "3.0.0",
  "scripts": {
    "start": "npx astro dev",
    "build": "npx astro build",
    "build:docker": "docker build -t myrt-co:latest .",
    "prebuild:docker": "npm run build",
    "start:docker": "docker run --name myrt-app -p -d 80:80 -p 443:443 myrt-co:latest",
    "stop:docker": "docker stop myrt-app || true && docker rm -f myrt-app || true",
    "lint:styles": "npx stylelint 'src/styles/*'",
    "lint": "npm run lint:styles"
  },
  "devDependencies": {
    "@astrojs/renderer-preact": "^0.3.0",
    "astro": "^0.21.5",
    "postcss-scss": "^4.0.2",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "yaspeller": "^8.0.0"
  }
}

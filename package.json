{
  "name": "myrt.co",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "build": "rm -rf dist/ && export NODE_ENV=production && node scripts/build.js",
    "serve": "npx parcel serve src/index.pug",
    "size-check": "npx size-limit",
    "spell-check": "npx yaspeller dist/static/**/*.html",
    "lint": "npx stylelint \"src/**/*.scss\" && npx pug-lint src/ && npx remark .gitlab/**/*.md && npx remark *.md",
    "lint:fix": "npx stylelint \"src/**/*.scss\" --fix",
    "postinstall": "chmod +x .hooks/* && cp -r .hooks/ .git/hooks/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/mishamyrt/mishamyrt.gitlab.io.git"
  },
  "author": "mishamyrt",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/mishamyrt/mishamyrt.gitlab.io/issues"
  },
  "homepage": "https://myrt.co",
